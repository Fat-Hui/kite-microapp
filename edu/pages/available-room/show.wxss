/* pages/available-room/show.wxss */
.main {
	display: flex;
	width: 100%;
	height: 100%;
	align-items: center;
	justify-content: center;
	text-align: centerï¼›
}

.title {
	margin: 1vh auto;
	font-weight: bold;
	font-size: 20px;
	text-align: center;
}

.index_tab .bottom_scroll {
	width: 100%;
	white-space: nowrap;
	overflow: hidden;
	line-height: 83rpx;
}

.index_tab .bottom_scroll .nav {
	width: 20%;
	display: inline-block;
	white-space: normal;
	text-align: center;
	font-size: 26rpx;
}

.flex-wrap {
	display: flex;
	flex-wrap: nowrap;
	justify-content: space-around;
	height: 40px;
}

.sertit-dis .flex-item {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-around;
}

.tab-header {
	width: 100vw;
	display: flex;
	height: 75rpx;
}

.tab-item {
	flex-shrink: 0;
	font-size: 28rpx;
	padding: 5rpx 20rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	border-radius: 40rpx;
}

.active-item {
	background-color: #D3D3D3;
}

.body {
	height: auto;
	display: flex;
	flex-direction: column;
	align-items: center;
}

.tip-bar {
	width: 95vw;
	padding: 5rpx;
	padding-right: 20;
	border-radius: 20rpx;
	display: flex;
	justify-content: space-between;
	background: linear-gradient(45deg, #87CEEB, #87CEFA, white);

}

.color-tips,
.time-tips {
	display: flex;
	font-size: 28rpx;
}

.rest-tip,
.busy-tip {
	display: flex;
}

.color {
	width: 20rpx;
	height: 40rpx;
	border-radius: 10rpx;
}

.rest-tip>.color,
.busy-item {
	background-color: rgb(50, 205, 50);
	margin-right: 4rpx;
}

.busy-tip>.color,
.isbusy {
	background-color: rgb(255, 0, 0);
	margin-right: 4rpx;
}

.busy-item:nth-of-type(4n) {
	margin-right: 60rpx;
}

.time {
	padding-left: 10rpx;
	border-left: 1px solid black;
	margin-left: 80rpx;


}

.room-container {
	width: 95vw;
	justify-content: space-between;
	margin: 10rpx 0;
	padding-right: 10rpx;
}

.busy-container,
.room-container {
	display: flex;
}
