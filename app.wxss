.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /* padding: 100rpx 0; */
  box-sizing: border-box;
}


page {
  background-color: rgb(246, 246, 251);
  --font-size: 12px;
  --padding-size: 12vh;
  --common-width: 87vw;
  --swiper-color: linear-gradient( 135deg, #FF6FD8 10%, #3813C2 100%);
  --height: calc( 100vh - 48px );
}

button::after {
  border: none;
}

button {
  padding-left: 0;
  padding-right: 0;
  line-height: inherit;
}

button {
  border-radius: 0;
}