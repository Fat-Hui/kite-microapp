/* pages/newFriend/newFriend.wxss */

.main{
    width: 100%;
    height: 100%;
    margin-top: 100rpx;
    margin-bottom: 50rpx;
}   

.scbg{
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: rgb(246, 246, 251);
}

.block{ 
    width: 100%;
    
}

.card{
    background-color: white;
    /* border:solid 8rpx black; */
    /* border-radius: 10rpx; */
    width: 80%;
    margin-left: 65rpx;
    margin-top: 25rpx;
    margin-bottom: 10rpx;
    padding: 10rpx;
    display: flex;
    flex-direction: column;
    align-items: center;

}

.info{
    display: flex;
    flex-direction: row;
}

.image-wrap image{
    border-radius: 50%;
    width: 180rpx;
    height: 180rpx;
    /* border: solid 6rpx red; */
    margin-top: 8rpx;
}

.detail{
    display: flex;
    flex-direction: column;
    width: 390rpx;
}

.detail-1{
    padding: 15rpx 0 0 15rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.name{
    font-size: 38rpx;
    font-weight: 550;
}

.position{
    margin-left: 5rpx;
}

.pos-wrap{
    display: flex;
    flex-direction: row;
}

.detail-1 image{
    width: 40rpx;
    height: 40rpx;
}

.detail-2{
    margin: 20rpx 0 0rpx 15rpx;
}

.detail-2 text{
    font-size: 30rpx;
}

.detail-3{
    margin: 5rpx 0 30rpx 15rpx;
}

.detail-3 text{
    font-size: 30rpx;
}

.contact{
    margin-top: 10rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    width: 100%;
}

.qq{
    display: flex;
    flex-direction: row;
}

.qq-wrap{
    width: 97%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.wx{
    margin-top: 10rpx;
    display: flex;
    flex-direction: row;
    margin-bottom: 10rpx;
}

.wx text{
    color: rgb(167,158,143);
    padding: 0rpx 0rpx 0rpx 20rpx;
}

.qq text{
    color: rgb(167,158,143);
    padding: 0rpx 0rpx 0rpx 20rpx;
}

.qq-wrap image{
    padding: 0rpx 0 0rpx 20rpx;
    width: 40rpx;
    height: 40rpx;
}

.wx image{
    padding: 0rpx 0 0rpx 20rpx;
    width: 42rpx;
    height: 42rpx;
}

.bed{
    font-weight: 400;
}