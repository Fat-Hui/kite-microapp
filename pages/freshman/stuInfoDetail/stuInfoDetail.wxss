.main{
    background-color:rgb(246, 246, 251);
    z-index: 1;
}

.userinfo{
    padding-top: 55rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 3;
}

.userinfo-avatar{
    width: 230rpx;
    height: 230rpx;
    margin-top: 20rpx;
    margin: 10rpx;
    border-radius: 50%;
    z-index: 3;
}

.userinfo-nickname{
    font-size: 38rpx;
    font-weight: 500;
    margin-bottom: 60rpx;
    z-index: 3;
}

.greetings{
    text-align: center;
    font-size: 60rpx;
    font-weight: 550;
    margin-bottom: 40rpx;
    z-index: 3;
}

.stu_info{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    width: 100%;
    background-color: white;
    z-index: 3;
}

.info_wrap{
    width: 56%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    z-index: 3;
}

.name-wrap image{
    width: 65rpx;
    height: 65rpx;
    padding-right: 25rpx;
}

.name-wrap{
    width: 100%;
    display: flex;
    flex-direction: row;
     justify-content: space-between;
}

.info_wrap text{
    margin:4px;
    font-size:34rpx;
    font-weight: 530;
    z-index: 3;
    word-wrap: break-word;
    word-break: break-all;
    white-space: pre-line;
}

.image_wrap{
    width: 42%;
    z-index: 3;
}

.image_wrap image{
    width:100%;
    height: 98%;
    z-index: 3;
}

.button_wrap_1{
    padding: 90rpx 0 90rpx 0;
    width: 100%;
    background-color: white;
    z-index: 3;
}

.button_wrap_1 button{
    background-color: rgb(59, 175, 91);
    height: 65rpx;
    line-height: 65rpx;
    color: white;
    font-weight: 500;
    font-size: 30rpx;
    border-radius: 0;
    z-index: 3;
}

.button_wrap_2{
    padding-top: 140rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    background-color: white;
    z-index: 3;
}

.button_wrap_2 button{
    height: 70rpx;
    line-height: 70rpx;
    font-weight: 500;
    background-color: black;
    color: white;
    border-radius: 0;
    width: 20%;
    margin-bottom: 20rpx;
    z-index: 3;
}


.button_wrap_3{
    display: flex;
    flex-direction: row;
    padding-top: 20rpx;
    justify-content: space-between;
    background-color: white;
    z-index: 3;
}

.button_wrap_3 button{
    height: 70rpx;
    line-height: 70rpx;
    font-weight: 500;
    background-color: black;
    color: white;
    border-radius: 0;
    width: 20%;
    margin-bottom: 210rpx;
    z-index: 3;
}



.background{
    position: absolute;
    left: 0;
    top: 460rpx;
    border-radius: 160rpx;
    background-color: white;
    width: 100%;
    height: 500rpx;
    z-index: 2;
}

 