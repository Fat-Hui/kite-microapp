/* pages/consume/electricity/electricity.wxss */
.title {
  margin: 2vh auto;
  font-weight: bold;
  font-size: 32px;
  text-align: center;
}

.share_button{
  display: flex;
  justify-content: center;
  align-items: center;
  background-image: linear-gradient( 135deg, #70F570 10%, #49C628 100%);
  /* background-color: #70F570 ; */
  /* border: 1px solid black; */
  width: 60%;
  height: 80rpx;
  color: white;
  border-radius: 14px;
  font-weight: bold;
  margin-top: 20rpx;
  font-size: 32rpx;
  /* padding: 10rpx; */
  /* margin-top: 20rpx; */
}

.share_button image{
  width: 90%;
  height: 90%;
}

.main {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.button_container {
  width: 80vw;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.s_button {
  font-weight: bold;
  height: 80rpx;
  line-height: 79rpx;
  /* background-color: #0396FF; */
  background-image: linear-gradient(135deg, #ABDCFF 10%, #0396FF 100%);
  color: white;
  width: calc(750rpx * 0.25);
  z-index: 3;
  border-radius: 14px;
  display: flex;
  justify-content: center;
}

.s_button:nth-last-child(1) {
  /* background-color: #F55555; */
  background-image: linear-gradient(135deg, #FDD819 10%, #E80505 100%);
  width: calc(750rpx * 0.4);
}

input {
  background-color: white;
  padding-left: 2vh;
  height: 5vh;
}

.show_block {
  background-color: white;
  margin-top: 60rpx;
  width: 85%;
  height: 400rpx;
  border-radius: 10px;
  padding-left: 20rpx;
  padding-top: 20rpx;
}

.img_wrap {
  width: calc(750rpx * 0.1);
  height: calc(750rpx * 0.09);
}

.img_wrap image {
  width: 100%;
  height: 100%;
}

.text_block {
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  margin-left: 10rpx;
  margin-bottom: 40rpx;
  font-weight: bold;
  font-size: 35rpx;
}

.input_left {
  width: 50%;
  border-top: 1px solid black;
  border-left: 1px solid black;
  border-bottom: 1px solid black;
}

.input_right::after {
  position: absolute;
  top: 12rpx;
  height: calc(5vh - 24rpx);
  left: 0;
  content: '';
  width: 0;
  border-left: solid #e3e3e3 1px;
}

.input_right {
  width: 50%;
  border-top: 1px solid black;
  border-right: 1px solid black;
  border-bottom: 1px solid black;
  position: relative;
}

.tips {
  /* outline: 1px solid red; */
  width: 3.5vh;
  height: 3.5vh;
  right: 0;
  top: 0.75vh;
  position: absolute;
  z-index: 100;
}

.slider_contianer {
  position: relative;
  margin-top: 30rpx;
  width: 60%;
  /* background-color: white; */
  height: 100rpx;
  padding: 10rpx 5rpx;
  border-radius: 14px;
  display: flex;
  justify-content: space-between;
}

.help {
  width: 50%;
  height: 80rpx;
  position: absolute;
  /* background: #6076ff;*/
  background-image: var(--swiper-color);
  border-radius: 14px;
  transition: all 0.5s ease;
  box-shadow: 0px 5px 15px 0px rgba(76, 145, 224, 0.34);
}

.type_indication_to_left {
  animation: switchToLeftAnim 0.5s forwards;
}

.type_indication_to_right {
  animation: switchToRightAnim 0.5s forwards;
}

@keyframes switchToRightAnim {
  0% {
    left: 0%;
    width: 50%;
    background-image: var(--swiper-color);
  }

  20% {
    left: 0%;
    width: 80%;
    background-image: var(--swiper-color);
  }

  100% {
    left: 50%;
    width: 50%;
    background-image: var(--swiper-color);
  }
}

@keyframes switchToLeftAnim {
  0% {
    right: 0%;
    width: 50%;
    background-image: var(--swiper-color);
  }

  20% {
    right: 0%;
    width: 80%;
    /* background: #6076ff;
      */
    background-image: var(--swiper-color);
  }

  100% {
    right: 50%;
    width: 50%;
    /* background: #6076ff; */
    background-image: var(--swiper-color);
  }
}

.slider_button {
  width: 50%;
  background-image: none;
  color: #7367F0;
  height: 80rpx;
  font-weight: bold;
  line-height: 79rpx;
  border-radius: 0;
  z-index: 3;
  border-radius: 14px;
  display: flex;
  justify-content: center;
  transition: all 0.5s ease;
}

.slider_button_selected {
  color: white;
  /* background: #6076ff; */
}

.chart {
  width: 105%;
  height: 115%;
}

.rank_container {
  position: relative;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 85%;
  background-color: white;
  padding: 20rpx 30rpx;
  border-radius: 10px;
  text-align: center;
}

.icon_container {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  width: calc(750rpx * 0.1);
  height: calc(750rpx * 0.11);
}

.icon_container image {
  width: 100%;
  height: 100%;
}

.cost {
  /* color:red; */
  font-size: 32px;
  font-weight: bold;
  /* margin-left: 20rpx; */
  width: 85vw;
  text-align: center;
  margin-bottom: 10rpx;
}