/*高宽比约为0.42*/
.box {
  position: relative;
  margin: 0 auto;
  height: 100%;
  width: 680rpx;
}
.pop_class{
  box-sizing: border-box;
  height: 30vh;
  width: 40vh;
  padding:5vh;
  border-radius: 1vh;
}
.pop_class_complete{
  box-sizing: border-box;
  height: 15vh;
  width: 30vh;
  border-radius: 1vh;
}
.pop_container_complete{
  width: 30vh;
  height: 15vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}


.pop_button{
  width: 20vh;
  height: 6vh;
  background-color: black;
  border-radius: 2vh;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;

}

.popT_class{
  height: 15vh;
  width: 20vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.pop_container{
  width: 30vh;
  height: 20vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}


.main {
  width: 100%;
  padding-top: var(--padding-size);
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
  align-items: center;
  height: calc( 100vh - 48px );
  
}

.background {
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
}

.menu_cell {
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding-top: 20px;
  font-size: var(--font-size);
}

.menu_cell:nth-child(1) {
  border-top-left-radius: 10px;
}

.menu_cell:nth-child(3) {
  border-top-right-radius: 10px;
}

.menu_cell:nth-child(4) {
  border-bottom-left-radius: 10px;
}

.menu_cell:nth-child(6) {
  border-bottom-right-radius: 10px;
}

.menu_cell_active {
  background-color: #e3e3e3;
}

.menu_cell image {
  width: 4vh;
  height: 4vh;
}

.menu_cell_text {
  color: #9e9696;
  margin-top: 10px;
  width: 60px;
  height: 30px;
}

.menuBlock {
  display: grid;
  grid-template-columns: repeat(3, 33.3%);
  grid-template-rows: repeat(2, 50%);
  position: relative;
  margin: 5vh 0;
  width: 680rpx;
  height: 453rpx;
  border-radius: 10px;
  box-shadow: 0px 0px 10px 6px rgba(224, 224, 224, 0.37);
  background-color: white;
}
@keyframes living {
  0% {
    transaform: scale(1);
  }
  25%{
    transform: scale(1.4);
  }
  50% {
    transform: scale(1);
  }
  80%{
    transform: scale(1.3);
  }
  100% {
    transform: scale(1);
  }
}

.pop_text{
  font-weight:bold;
  font-size:24px;
  margin: auto;
}

.toast_wrap{
  position: relative;
  width: 650rpx;
  height: 70rpx;
  box-shadow: 0px 0px 10px 6px rgba(224, 224, 224, 0.247);
  background-color: rgb(255, 255, 255);
  margin-top: 5vh;
  border-radius:20rpx;
  display: flex;
  justify-content:space-between;
  align-items:center;
  padding-left: 30rpx;
  overflow: hidden;
}

.toast_wrap image{
  width:35rpx;
  height:36rpx;
  transform: rotate(-45deg);
}

.toast_wrap swiper{
  position: relative;
  width: calc( 650rpx - ( 35rpx + 30rpx ));
  height: 100%;
}

.toast_wrap swiper::after{
  position: absolute;
  content: '';
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}
.toast_wrap .text_wrap{
  width: calc( 650rpx - ( 35rpx + 30rpx + 30rpx ));
  height: 100%;
  text-align:center;
  display: flex;
  align-items: center;
  overflow: hidden;
}
.text_wrap text{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}